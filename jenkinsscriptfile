node {
	stage('Checkout code') {
         git 'https://github.com/kdr717/javaproject.git'
           
    }
	stage('Build'){
		echo "build pass"
		sh "mvn -version"
        sh "mvn clean"
	}
	stage('test 007'){
		echo 'test pass'
		sh "mvn test"
	}
	stage('Compile'){
		echo 'Compile pass'
		sh "mvn compile"
	}
	stage('package'){
		echo 'Compile pass'
		sh "mvn package"
	}
	stage('Ansible Deploy'){
		echo "Deploying the Project.........."
		ansiblePlaybook credentialsId: 'deploy', disableHostKeyChecking: true, installation: 'ansible', inventory: 'dev.inv', playbook: 'play.yml', sudoUser: null
		
	}
}
